@model IEnumerable<Block_Chain_Example_1.Models.Block>

@{
    ViewData["Title"] = "Index";
    int? firstInvalidIndex = ViewBag.FirstInvalidIndex as int?;
}

<h1>Index</h1>

@* Складність пошуку валідного хешу: кількість нулів на початку блоку *@
<p>Difficulty @ViewBag.Difficulty</p>
<form method="post" asp-action="SetDifficulty" class="d-flex gap-2 mb-3">
    <input type="number" name="difficulty" placeholder="Введіть важкість" class="form-control" style="width: 150px; min=" 1" max="10" step="1" value="@ViewBag.Difficulty"/>
    <button type="submit" class="btn btn-outline-secondary">Зберегти</button>
</form>

@* Форма для додавання нового блоку *@
<form method="post" asp-action="Add" class="mb-3" id="addBlockForm">
    <div class="mb-2">
        <label for="data">Дані блоку</label>
        <input type="text" name="data" placeholder="Введіть дані блоку" class="form-control" />
    </div>
    <div class="mb-2">
        <label for="privateKeyBase">Приватний ключ (Base64)</label>
        <textarea name="privateKeyBase" class="form-control" rows="3" placeholder="Вставте приватний ключ у форматі Base64"></textarea>
    </div>
    <div class="d-flex gap-2">
        <button type="submit" class="btn btn-primary">Додати блок</button>
        <a asp-action="Search" class="btn btn-secondary">Пошук блоку</a>
    </div>
</form>

@* Прогрес бар Spinner для візуального оформлення додавання блоку*@
<div id="miningSpinner" class="text-center mb-2 d-none">
    <div class="spinner-border text-primary" role="status">
        <span class="visually-hidden"></span>
    </div>
    <p>Майнінг блоку, будь ласка зачекайте...</p>
</div>

<script>
    document.querySelector('form[asp-action="Add"]').addEventListener('submit', function () {
        document.getElementById('miningSpinner').classList.remove('d-none');
    });
</script>

@* Генерація приватного ключа у форматі Base64 *@
<form method="post" asp-action="GenerateKey" class="mb-3">
    <div class="d-flex gap-2">
        <button type="submit" class="btn btn-success">Згенерувати ключ</button>
    </div>
</form>

@if (ViewBag.GeneratedKey != null)
{
    <div class="mb-2">
        <label>Згенерований приватний ключ (Base64):</label>
        <textarea class="form-control" rows="3" readonly id="generatedKey">@ViewBag.GeneratedKey</textarea>
        <button type="button" class="btn btn-outline-secondary mt-2" onclick="navigator.clipboard.writeText(document.getElementById('generatedKey').value)">Копіювати ключ</button>
    </div>
}


@if (ViewBag.Valid == false)
{
    <p class="text-danger"><strong>Порушено цілісність ланцюга блоків.</strong></p>
}

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Index)</th>
            <th>@Html.DisplayNameFor(model => model.Nonce)</th>
            <th>@Html.DisplayNameFor(model => model.MiningDurationMs)</th>
            <th>@Html.DisplayNameFor(model => model.Data)</th>
            <th>@Html.DisplayNameFor(model => model.PrevHash)</th>
            <th>@Html.DisplayNameFor(model => model.Hash)</th>
            <th>@Html.DisplayNameFor(model => model.Timestamp)</th>
            <th>@Html.DisplayNameFor(model => model.Signature)</th>
            <th>Статус підпису</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            string rowClass = "";

            if (firstInvalidIndex.HasValue)
            {
                if (item.Index < firstInvalidIndex.Value)
                {
					rowClass = "table-success"; // валідний блок
                }
                else
                {
					rowClass = "table-danger"; // невалідний блок і всі після нього
                }
            }

            <tr class="@rowClass">
                <td>@item.Index</td>
                <td>@item.Nonce</td>
                <td>@item.MiningDurationMs</td>
                <td>@item.Data</td>
                @* <td>@item.PrevHash</td> *@
                <td>@(item.PrevHash.Length > 12 ? item.PrevHash.Substring(0, 12) + "..." : item.PrevHash)</td>
                <td>@(item.Hash.Length > 12 ? item.Hash.Substring(0, 12) + "..." : item.Hash)</td>
                <td>
                    @{
                        var parsed = DateTime.TryParse(item.Timestamp, out var dt)
                        ? dt.ToString("dd MMMM yyyy 'р.', HH:mm:ss", new System.Globalization.CultureInfo("uk-UA"))
                        : "Невірний формат дати";
                    }
                    @parsed
                </td>
                <td>@(item.Signature.Length > 12 ? item.Signature.Substring(0, 12) + "..." : item.Signature)</td>
                <td>@(item.Verify() ? "валідний" : "невалідний")</td>
                <td>
                    @* @Html.ActionLink("Edit", "Edit", new { id = item.Index }) *@
                    <a asp-action="Edit" asp-route-id="@item.Index" class="btn btn-sm btn-warning me-1">Edit</a>
                    @* @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) *@
                    @* @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ }) *@
                </td>
            </tr>
        }
    </tbody>
</table>
